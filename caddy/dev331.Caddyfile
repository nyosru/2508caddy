wp1.local {
    import base

    root * /usr/share/caddy/wordpress

    php_fastcgi wordpress_app:9000

    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
            roll_keep_for 48h
        }
    }

    @notStatic {
        path_regexp wp ^/(wp-admin|wp-login\.php|wp-cron\.php|wp-json|wp-content|wp-includes|wp-admin/.*|wp-content/.*|wp-includes/.*)
        not path @notStatic
    }

    rewrite {
        to {path} {path}/ /index.php?{query}
    }
}

